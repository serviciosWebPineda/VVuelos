@model IEnumerable<V_Vuelo.Models.Puerta>

@{
    ViewData["Title"] = "Puertas de Abordaje";
}

<h1>Puertas de Abordaje</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado_puerta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado_puerta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Puerta_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Puerta_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Puerta_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
